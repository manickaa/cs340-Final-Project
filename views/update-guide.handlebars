<div class="admin-page">
    <div class="form">
        <form id="update-guide" action="/guides" method="post">
            <fieldset>
                <legend>Update {{guide.first_name}} {{guide.last_name}}:</legend>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">First Name</label>
                    <div class="col-6">
                        <input type="text" class="form-control" name="first_name" id="first_name" value="{{guide.first_name}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Last Name</label>
                    <div class="col-6">
                        <input type="text" class="form-control" name="last_name" id="last_name" value="{{guide.last_name}}" required>
                    </div>
                </div>
                <button onclick="updateGuide({{guide.guide_ID}})" class="btn btn-dark">Update</button>
            </fieldset>
        </form>
    </div>
</div>