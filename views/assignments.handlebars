<div class="admin-page">
    <div class="form">
        <form method="get">
            <fieldset>
                <legend>Manage Assignments</legend>
                <a href="/assignments/add-assignment" class="btn btn-dark" id="submitInfo">Add New Assignment</a>
            </fieldset>
        </form>
    </div>
    <div id="customer-page">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Assignment ID#</th>
                    <th scope="col">Booking ID#</th>
                    <th scope="col">Guide</th>
                    <th scope="col">Destination</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Departure Date</th>
                    <th scope="col">Arrival Date</th>
                    <th scope="col"># Adults</th>
                    <th scope="col"># Children</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each assignments}}
                <tr>
                    <td>{{assignment_ID}}</td>
                    <td>{{booking_ID}}</td>
                    <td>{{guide}}</td>
                    <td>{{destination}}</td>
                    <td>{{customer}}</td>
                    <td>{{departure_date}}</td>
                    <td>{{arrival_date}}</td>
                    <td>{{count_adults}}</td>
                    <td>{{count_kids}}</td>
                    <td><button type="button" class="btn btn-dark" onclick="deleteAssignment({{assignment_ID}})">Delete</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>