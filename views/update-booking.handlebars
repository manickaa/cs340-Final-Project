<div class="admin-page">
    <div class="form">
        <form id="update-booking" action="/booking" method="post">
            <fieldset>
                <legend>Update Bookings</legend>
            <div class="form-group row">
                <label for="formGroupExampleInput" class="col-2 col-form-label">Travel Location</label>
                <div class="col-6">
                    <select name="city" size="1" class="form-control" id="location-selector">
                        {{#each location_display}}
                        <option value="{{location_id}}">{{location_name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="formGroupExampleInput" class="col-2 col-form-label">Departure Date</label>
                <div class="col-6">
                <input type="date" class="form-control" name="departure_date" value="{{bookings.departure_date}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="formGroupExampleInput" class="col-2 col-form-label">Arrival Date</label>
                <div class="col-6">
                <input type="date" class="form-control" name="arrival_date" value="{{bookings.arrival_date}}">
                </div>
            </div>
            <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Number of Adults</label>
                    <div class="col-6">
                    <input type="number" class="form-control" name="number_adults" value="{{bookings.number_adults}}">
                    </div>
            </div>
            <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Number of Children</label>
                    <div class="col-6">
                    <input type="number" class="form-control" name="number_children" value="{{bookings.number_children}}">
                    </div>
            </div>
                <button onclick="updateBooking({{bookings.booking_ID}})" class="btn btn-dark" id="submitInfo">Update</button>
            </fieldset>
        </form>
        <script defer>selectLocation({{location_id}});</script>
    </div> 
</div>
