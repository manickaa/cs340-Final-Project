<div class="form">
    <form method="get">
        <fieldset>
            <legend>Update Tour Guide:</legend>
            <div class="form-group row">
                <label for="formGroupExampleInput" class="col-2 col-form-label">First Name</label>
                <div class="col-6">
                    <input type="text" class="form-control" name="firstname" id="firstname" value="{{tour_guide.first_name}}" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="formGroupExampleInput" class="col-2 col-form-label">Last Name</label>
                <div class="col-6">
                    <input type="text" class="form-control" name="lastname" id="lastname" value="{{tour_guide.last_name}}" required>
                </div>
            </div>
            <button onclick="updateGuide({{tour_guide.id}})">Update</button>
        </fieldset>
    </form>
</div>
