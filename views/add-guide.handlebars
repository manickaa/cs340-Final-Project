<div class="admin-page">
    <div class="form">
        <form id="add-guide" action="/guides/add-guide" method="post">
            <fieldset>
                <legend>Add New Tour Guide:</legend>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">First Name</label>
                    <div class="col-6">
                        <input type="text" class="form-control" id="first_name" name="first_name" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Last Name</label>
                    <div class="col-6">
                        <input type="text" class="form-control" id="last_name" name="last_name" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-dark" id="add_new_guide">Add</button>
                <a href="/guides" class="btn btn-dark" id="submitInfo">Return to Manage Tour Guides</a>
            </fieldset>
        </form>
    </div>
</div>
