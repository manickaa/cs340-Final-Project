<div class="admin-page">
    <div class="form">
        <form ud='filter_guide' action='' method=''>
            <fieldset>
                <legend>Manage Tour Guides</legend>
                <div class="form-group row">
                    <label class="col-2 col-form-label">Search By First Name</label>
                    <div class="col-6">
                        <input class="form-control" id='first_name_search_string' type='text' name='first_name_search_string' value=''>
                    </div>
                </div>
                <input type="button" class="btn btn-dark" value="Search" onclick="searchGuideByFirstName()">
                <a href="/guides" class="btn btn-dark" id="submitInfo">Clear</a>
                <a href="/guides/add-guide" class="btn btn-dark" id="submitInfo">Add New Tour Guide</a>
            </fieldset>
        </form>
    </div>
    <div id="customer-page">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Tour Guide ID#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col"># Assignments</th>
                    <th scope="col"># Locations</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each tour_guide}}
                <tr>
                    <th scope="row">{{guide_ID}}</th>
                    <td>{{first_name}}</td>
                    <td>{{last_name}}</td>
                    <td>{{count_assignments}}</td>
                    <td>{{count_locations}}</td>
                    <td><a href="/guides/{{guide_ID}}" class="btn btn-dark">Edit</a></td>
                    <td><button type="button" onclick="deleteGuide({{guide_ID}})" class="btn btn-dark">Delete</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
