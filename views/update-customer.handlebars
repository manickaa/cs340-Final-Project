<div class="admin-page">
    <div class="form">
        <form id="update-customer" action="/customer" method="post">
            <fieldset>
                <legend>Update Customer:</legend>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">First Name</label>
                    <div class="col-6">
                        <input type="text" class="form-control" name="first_name" value="{{customer.first_name}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Last Name</label>
                    <div class="col-6">
                        <input type="text" class="form-control" name="last_name" value="{{customer.last_name}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Street</label>
                    <div class="col-6">
                        <input type="text" class="form-control" name="street_no" value="{{customer.street_no}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">City</label>
                    <div class="col-6">
                        <input type="text" class="form-control" name="city" value="{{customer.city}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">State</label>
                    <div class="col-6">
                        <input type="text" class="form-control" name="state" value="{{customer.state}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Country</label>
                    <div class="col-6">
                        <input type="text" class="form-control" name="country" value="{{customer.country}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Phone Number</label>
                    <div class="col-6">
                        <input type="text" class="form-control" name="phone_number" pattern="^\d{3}-\d{3}-\d{4}$"  value="{{customer.phone_number}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Email ID</label>
                    <div class="col-6">
                        <input type="text" class="form-control" name="email_id" value="{{customer.email_id}}">
                    </div>
                </div>
                <button onclick="updateCustomer({{customer.customer_ID}})" class="btn btn-dark">Update</button>
            </fieldset>
        </form>
    </div> 
</div>
