<div class="admin-page">
    <div class="form">
        <form id="add-assignment" action="/assignments/add-assignment" method="post">
            <fieldset>
                <legend>Add New Assignment:</legend>
                <p>One assignment per booking. Only unassigned bookings will appear in dropdown.</p>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Booking ID#</label>
                    <div class="col-6">
                        <select name="booking" size="1" class="form-control" id="booking" required>
                            {{#each booking_display}}
                            <option value="{{booking_ID}}">{{booking_ID}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Tour Guide</label>
                    <div class="col-6">
                        <select name="tour_guide" size="1" class="form-control" id="tour_guide" required>
                            {{#each guide_display}}
                            <option value="{{guide_ID}}">{{guide_full_name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-dark" name="add_assignment" id="add_assignment">Add</button>
                <a href="/assignments" class="btn btn-dark" id="return_assign">Return to Manage Assignments</a>

            </fieldset>
        </form>
    </div>
</div>
