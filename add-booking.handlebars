<div class="admin-page">
    <div class = "form">
        <form id="add-booking" action="/booking" method="post">
            <fieldset>
                <legend>Add Bookings</legend>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Customer ID</label>
                    <div class="col-6">
                        <input type="text" class="form-control" name="customer_ID" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Travel Location</label>
                    <div class="col-6">
                        <input type="text" class="form-control" name="travelLocation" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Departure Date</label>
                    <div class="col-6">
                    <input type="date" class="form-control" name="departure_date" placeholder="24/10/2019" required >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-2 col-form-label">Arrival Date</label>
                    <div class="col-6">
                    <input type="date" class="form-control" name="arrival_date" placeholder="29/10/2019" required>
                    </div>
                </div>
                <div class="form-group row">
                        <label for="formGroupExampleInput" class="col-2 col-form-label">Number of Adults</label>
                        <div class="col-6">
                        <input type="number" class="form-control" name="number_adults" required>
                        </div>
                </div>
                <div class="form-group row">
                        <label for="formGroupExampleInput" class="col-2 col-form-label">Number of Children</label>
                        <div class="col-6">
                        <input type="number" class="form-control" name="number_children" required>
                        </div>
                </div>
                <button type="submit" class="btn btn-dark" id="submitInfo">
                    Add
                </button>
            </fieldset>
        </form>
    </div>
</div>